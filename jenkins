pipeline {
    agent any
    def app

    environment {
        IMAGE_TAG = 'latest'
        DOCKER_IMAGE = "awasthir314/pipelinetest"
    }

    stages {
        stage('Checkout') {
            checkout scm
        }

        stage('Build') {
            steps {
                sh 'dotnet build PipelineTest/PipelineTest.csproj --configuration Release'
            }
        }

        stage('Test') {
            steps {
                sh 'dotnet test PipelineTest.sln'
            }
        }

        stage('Docker Build') {
            app = docker.build(${DOCKER_IMAGE}, ". -f ./PipelineTest/Dockerfile").inside("--entrypoint=''") {
                echo "Building docker image"
            }
        }

        stage('Docker Push') {
            docker.withRegistry('https://index.docker.io/v1', 'docker_login') {
                docker.image(${DOCKER_IMAGE}).push()
            }
        }

        stage('Run Container') {
            sh "docker run -d --name pipelinetest -p 9000:80 awasthir314/pipelinetest:latest"
        }
    }
}